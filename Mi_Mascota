#include <iostream>
#include <thread>
#include <chrono>

using namespace std;

const int maximo_valor = 10;

class Mascota {
private:
    string nombre;
    int energia;
    int hambre;
    int felicidad;

public:
    // Constructor
    Mascota(string, int, int, int);

    // Getters y Setters
    string getNombre();
    void setNombre(string _nombre);

    int getEnergia();
    void setEnergia(int _energia);

    int getHambre();
    void setHambre(int _hambre);

    int getFelicidad();
    void setFelicidad(int _felicidad);

    // Métodos de acción
    void comer();
    void jugar();
    void dormir();
    void estado();
};

// ImplementaciON del Constructor
Mascota::Mascota(string _nombre, int _energia, int _hambre, int _felicidad) {
    nombre = _nombre;
    energia = _energia;
    hambre = _hambre;
    felicidad = _felicidad;
}

// Getters y Setters
string Mascota::getNombre() {
    return nombre;
}

void Mascota::setNombre(string _nombre) {
    nombre = _nombre;
}

int Mascota::getEnergia() {
    return energia;
}

void Mascota::setEnergia(int _energia) {
    energia = _energia;
}

int Mascota::getHambre() {
    return hambre;
}

void Mascota::setHambre(int _hambre) {
    hambre = _hambre;
}

int Mascota::getFelicidad() {
    return felicidad;
}

void Mascota::setFelicidad(int _felicidad) {
    felicidad = _felicidad;
}

// Métodos de acción
void Mascota::comer() {
    if (hambre > 0) {
        hambre--;
        if (energia < maximo_valor) energia++;

        cout << nombre << " Estoy comiendo comido." << endl;
    }
    else {
        cout << nombre << " no tengo hambre en este momento." << endl;
    }
    cout << "Hambre: " << hambre << "/10 | Energia: " << energia << "/10" << endl;
    cout << "  (\\__/)" << endl << endl;
    cout << "  (='o'=)" << endl << endl;
    cout << "  (\")_(\")" << endl << endl;
}

void Mascota::jugar() {
    if (hambre == maximo_valor) {
        cout << nombre << " tengo mucha hambre para jugar. quiero comer un poco." << endl;
        return;
    }
    if (energia > 0) {
        if (felicidad < maximo_valor) felicidad++;
        energia--;
        if (hambre < maximo_valor) hambre++;
        cout << nombre << " estoy jugando." << endl;
        cout << "Felicidad: " << felicidad << "/10 | Energia: " << energia << "/10" << endl;
    }
    else {
        cout << nombre << " Estoy muy cansado para jugar. quiero dormir un momento." << endl;
    }
    cout << "  (\\__/)" << endl << endl;
    cout << "  (=^_^=)" << endl << endl;
    cout << "  (\")_(\")" << endl << endl;
}

void Mascota::dormir() {
    energia = maximo_valor;
    if (hambre < maximo_valor)hambre++;//Aumenta hambre al dormir
    cout << nombre << " Estoy durmiendo y recuperando mi energia  para jugar: " << energia << "/10" << endl;
    cout << "  (\\(\\" << endl << endl;
    cout << "  ( -_-)" << endl << endl;
    cout << "  o_(\")(\")" << endl << endl;
}

void Mascota::estado() {
    cout << "\n---- Estado de " << nombre << " ----" << endl;
    cout << "Energia: " << energia << "/10" << endl;
    cout << "Felicidad: " << felicidad << "/10" << endl;
    cout << "Hambre: " << hambre << "/10" << endl;
    cout << "  (\\__/)" << endl << endl;
    cout << "  (='.'=)" << endl << endl;
    cout << "  (\")_(\")" << endl << endl;
}

void mostrarMenu() {
    cout << "\n|-------- Mascota Virtual RJ45-----------| " << endl;
    cout << "|-------------------------|---------------|" << endl;
    cout << "|1. Ver estado de Mascota |               |" << endl;
    cout << "|2. Alimentar Mascota     |   (\\__/)      |" << endl;
    cout << "|3. Jugar con Mascota     |   (='.'=)     |" << endl;
    cout << "|4. Dormir Mascota        |   (\")_(\")     |" << endl;
    cout << "|0. Salir                 |               |" << endl;
    cout << "|-------------------------|---------------|" << endl;
    cout << "Seleccione una opcion: ";
}

int main() {
    string nombre = "RJ45";
    int opc;

    // Creación del objeto Mascota
    Mascota conejo(nombre, 7, 3, 5);

    do {
        mostrarMenu();
        cin >> opc;

        if (cin.fail()) {
            cin.clear();
            cin.ignore(10000, '\n');
            cout << "Entrada invalida. Intenta de nuevo.\n";
            continue;
        }

        cout << "\033[2J\033[1;1H"; // Limpia la pantalla

        switch (opc) {
        case 0:
            cout << "Saliendo del juego..." << endl;
            break;
        case 1:
            conejo.estado();
            break;
        case 2:
            conejo.comer();
            this_thread::sleep_for(chrono::seconds(3)); // Espera 3 segundos
            cout << "\033[2J\033[1;1H";
            conejo.estado();
            // Muestra el estado después de la acción
            break;
        case 3:
            conejo.jugar();
            this_thread::sleep_for(chrono::seconds(3));
            cout << "\033[2J\033[1;1H";
            conejo.estado();
            break;
        case 4:
            conejo.dormir();
            this_thread::sleep_for(chrono::seconds(3));
            cout << "\033[2J\033[1;1H";
            conejo.estado();
            break;
        default:
            cout << "Opcion incorrecta. Intentalo de nuevo." << endl;
        }

    } while (opc != 0);

    return 0;
}
